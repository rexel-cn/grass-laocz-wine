<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rexel.laocz.mapper.LaoczBatchPotteryMappingHistoryMapper">

    <resultMap type="LaoczBatchPotteryMappingHistory" id="LaoczBatchPotteryMappingHistoryResult">
        <result property="mappingHisId" column="mapping_his_id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="workOrderId" column="work_order_id"/>
        <result property="liquorBatchId" column="liquor_batch_id"/>
        <result property="potteryAltarId" column="pottery_altar_id"/>
        <result property="potteryAltarNumber" column="pottery_altar_number"/>
        <result property="potteryAltarState" column="pottery_altar_state"/>
        <result property="potteryAltarFullAltarWeight" column="pottery_altar_full_altar_weight"/>
        <result property="potteryAltarQrCodeAddress" column="pottery_altar_qr_code_address"/>
        <result property="areaName" column="area_name"/>
        <result property="fireZoneName" column="fire_zone_name"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectLaoczBatchPotteryMappingHistoryVo">
        select mapping_his_id,
               tenant_id,
               work_order_id,
               liquor_batch_id,
               pottery_altar_id,
               pottery_altar_number,
               pottery_altar_state,
               pottery_altar_full_altar_weight,
               pottery_altar_qr_code_address,
               area_name,
               fire_zone_name,
               create_by,
               create_time,
               update_by,
               update_time,
               remark
        from laocz_batch_pottery_mapping_history
    </sql>

    <select id="selectLaoczBatchPotteryMappingHistoryList" parameterType="LaoczBatchPotteryMappingHistory"
            resultMap="LaoczBatchPotteryMappingHistoryResult">
        <include refid="selectLaoczBatchPotteryMappingHistoryVo"/>
        <where>
            <if test="tenantId != null  and tenantId != ''">
                and tenant_id = #{tenantId}
            </if>
            <if test="workOrderId != null  and workOrderId != ''">
                and work_order_id = #{workOrderId}
            </if>
            <if test="liquorBatchId != null  and liquorBatchId != ''">
                and liquor_batch_id = #{liquorBatchId}
            </if>
            <if test="potteryAltarId != null ">
                and pottery_altar_id = #{potteryAltarId}
            </if>
            <if test="potteryAltarNumber != null  and potteryAltarNumber != ''">
                and pottery_altar_number = #{potteryAltarNumber}
            </if>
            <if test="potteryAltarState != null ">
                and pottery_altar_state = #{potteryAltarState}
            </if>
            <if test="potteryAltarFullAltarWeight != null ">
                and pottery_altar_full_altar_weight = #{potteryAltarFullAltarWeight}
            </if>
            <if test="potteryAltarQrCodeAddress != null  and potteryAltarQrCodeAddress != ''">
                and pottery_altar_qr_code_address = #{potteryAltarQrCodeAddress}
            </if>
            <if test="areaName != null  and areaName != ''">
                and area_name like concat('%', #{areaName}, '%')
            </if>
            <if test="fireZoneName != null  and fireZoneName != ''">
                and fire_zone_name like concat('%', #{fireZoneName}, '%')
            </if>
        </where>
    </select>

    <insert id="batchLaoczBatchPotteryMappingHistory" parameterType="java.util.List"
            useGeneratedKeys="true" keyProperty="mappingHisId">
        insert into laocz_batch_pottery_mapping_history
        ( mapping_his_id , tenant_id , work_order_id , liquor_batch_id , pottery_altar_id , pottery_altar_number ,
        pottery_altar_state , pottery_altar_full_altar_weight , pottery_altar_qr_code_address , area_name ,
        fire_zone_name , create_by , create_time , update_by , update_time , remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.mappingHisId}, #{item.tenantId}, #{item.workOrderId}, #{item.liquorBatchId},
            #{item.potteryAltarId}, #{item.potteryAltarNumber}, #{item.potteryAltarState},
            #{item.potteryAltarFullAltarWeight}, #{item.potteryAltarQrCodeAddress}, #{item.areaName},
            #{item.fireZoneName}, #{item.createBy}, #{item.createTime}, #{item.updateBy}, #{item.updateTime},
            #{item.remark})
        </foreach>
    </insert>

</mapper>
