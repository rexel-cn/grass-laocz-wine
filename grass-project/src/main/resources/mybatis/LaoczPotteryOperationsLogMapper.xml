<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rexel.laocz.mapper.LaoczPotteryOperationsLogMapper">

    <resultMap type="LaoczPotteryOperationsLog" id="LaoczPotteryOperationsLogResult">
        <result property="operationId" column="operation_id"/>
        <result property="tenantId" column="tenant_id"/>
        <result property="workOrderId" column="work_order_id"/>
        <result property="potteryAltarId" column="pottery_altar_id"/>
        <result property="liquorBatchId" column="liquor_batch_id"/>
        <result property="operationType" column="operation_type"/>
        <result property="applyWeight" column="apply_weight"/>
        <result property="operatingWeight" column="operating_weight"/>
        <result property="remainingWeight" column="remaining_weight"/>
        <result property="lossWeight" column="loss_weight"/>
        <result property="areaName" column="area_name"/>
        <result property="fireZoneName" column="fire_zone_name"/>
        <result property="potteryAltarNumber" column="pottery_altar_number"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectLaoczPotteryOperationsLogVo">
        select operation_id,
               tenant_id,
               work_order_id,
               pottery_altar_id,
               liquor_batch_id,
               operation_type,
               apply_weight,
               operating_weight,
               remaining_weight,
               loss_weight,
               area_name,
               fire_zone_name,
               pottery_altar_number,
               create_by,
               create_time,
               update_by,
               update_time,
               remark
        from laocz_pottery_operations_log
    </sql>

    <select id="selectLaoczPotteryOperationsLogList" parameterType="LaoczPotteryOperationsLog"
            resultMap="LaoczPotteryOperationsLogResult">
        <include refid="selectLaoczPotteryOperationsLogVo"/>
        <where>
            <if test="tenantId != null  and tenantId != ''">
                and tenant_id = #{tenantId}
            </if>
            <if test="workOrderId != null  and workOrderId != ''">
                and work_order_id = #{workOrderId}
            </if>
            <if test="potteryAltarId != null ">
                and pottery_altar_id = #{potteryAltarId}
            </if>
            <if test="liquorBatchId != null  and liquorBatchId != ''">
                and liquor_batch_id = #{liquorBatchId}
            </if>
            <if test="operationType != null ">
                and operation_type = #{operationType}
            </if>
            <if test="applyWeight != null ">
                and apply_weight = #{applyWeight}
            </if>
            <if test="operatingWeight != null ">
                and operating_weight = #{operatingWeight}
            </if>
            <if test="remainingWeight != null ">
                and remaining_weight = #{remainingWeight}
            </if>
            <if test="lossWeight != null ">
                and loss_weight = #{lossWeight}
            </if>
            <if test="areaName != null  and areaName != ''">
                and area_name like concat('%', #{areaName}, '%')
            </if>
            <if test="fireZoneName != null  and fireZoneName != ''">
                and fire_zone_name like concat('%', #{fireZoneName}, '%')
            </if>
            <if test="potteryAltarNumber != null  and potteryAltarNumber != ''">
                and pottery_altar_number = #{potteryAltarNumber}
            </if>
        </where>
    </select>

    <insert id="batchLaoczPotteryOperationsLog" parameterType="java.util.List"
            useGeneratedKeys="true" keyProperty="operationId">
        insert into laocz_pottery_operations_log
        ( operation_id , tenant_id , work_order_id , pottery_altar_id , liquor_batch_id , operation_type , apply_weight
        , operating_weight , remaining_weight , loss_weight , area_name , fire_zone_name , pottery_altar_number ,
        create_by , create_time , update_by , update_time , remark) values
        <foreach item="item" index="index" collection="list" separator=",">
            ( #{item.operationId}, #{item.tenantId}, #{item.workOrderId}, #{item.potteryAltarId}, #{item.liquorBatchId},
            #{item.operationType}, #{item.applyWeight}, #{item.operatingWeight}, #{item.remainingWeight},
            #{item.lossWeight}, #{item.areaName}, #{item.fireZoneName}, #{item.potteryAltarNumber}, #{item.createBy},
            #{item.createTime}, #{item.updateBy}, #{item.updateTime}, #{item.remark})
        </foreach>
    </insert>

</mapper>
